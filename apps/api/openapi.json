{
  "openapi": "3.1.0",
  "info": {
    "title": "Mnemos API",
    "version": "1.0.0",
    "description": "HTTP API для сервиса Mnemos"
  },
  "servers": [
    {
      "url": "/",
      "description": "Текущий сервер"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Мониторинг состояния сервиса"
    },
    {
      "name": "Records",
      "description": "Управление записями"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Получить состояние сервиса",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/records": {
      "get": {
        "summary": "Получить список записей",
        "tags": ["Records"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Record"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Создать новую запись",
        "tags": ["Records"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecordCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Создано",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Record"
                }
              }
            }
          }
        }
      }
    },
    "/api/records/{id}": {
      "parameters": [
        {
          "$ref": "#/components/parameters/RecordId"
        }
      ],
      "put": {
        "summary": "Обновить запись",
        "tags": ["Records"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RecordUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Record"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Удалить запись",
        "tags": ["Records"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OperationResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "RecordId": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "enum": [true]
          },
          "ts": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["ok", "ts"],
        "additionalProperties": false
      },
      "Record": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": ["string", "null"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "title", "content", "createdAt", "updatedAt"],
        "additionalProperties": false
      },
      "RecordCreate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "content": {
            "type": "string"
          }
        },
        "required": ["title"],
        "additionalProperties": false
      },
      "RecordUpdate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "content": {
            "type": ["string", "null"]
          }
        },
        "additionalProperties": false
      },
      "OperationResult": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "enum": [true]
          }
        },
        "required": ["ok"],
        "additionalProperties": false
      }
    }
  }
}
