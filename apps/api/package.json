{
  "name": "@mnemos/api",
  "version": "0.0.1",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "swagger:export": "curl http://localhost:4000/docs/json -o ../../packages/types/swagger.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "db:seed": "node dist/seed.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "pnpm -w exec prettier --check apps/api",
    "format:write": "pnpm -w exec prettier --write apps/api"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@sinclair/typebox": "^0.34.9",
    "@mnemos/types": "workspace:*",
    "@prisma/client": "^6.18.0",
    "prisma": "^6.18.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.11.30",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "tsx": "^4.16.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.45.0"
  }
}
