{
  "openapi": "3.0.3",
  "info": { "title": "Mnemos API", "version": "1.0.0" },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "ApiError": {
        "title": "ApiError",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "code": { "type": "string" },
          "details": {}
        },
        "required": ["message"]
      },
      "HealthResponse": {
        "title": "HealthResponse",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "ts": { "format": "date-time", "type": "string" }
        },
        "required": ["ok", "ts"]
      },
      "AuthUser": {
        "title": "AuthUser",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "id": { "minLength": 1, "type": "string" },
          "email": { "format": "email", "type": "string" },
          "createdAt": { "format": "date-time", "type": "string" },
          "updatedAt": { "format": "date-time", "type": "string" }
        },
        "required": ["id", "email", "createdAt", "updatedAt"]
      },
      "AuthResponse": {
        "title": "AuthResponse",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "accessToken": { "minLength": 1, "type": "string" },
          "user": { "$ref": "#/components/schemas/AuthUser" }
        },
        "required": ["accessToken", "user"]
      },
      "RegisterRequest": {
        "title": "RegisterRequest",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "email": { "format": "email", "type": "string" },
          "password": { "minLength": 8, "description": "Минимум 8 символов", "type": "string" }
        },
        "required": ["email", "password"]
      },
      "LoginRequest": {
        "title": "LoginRequest",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "email": { "format": "email", "type": "string" },
          "password": { "minLength": 1, "type": "string" }
        },
        "required": ["email", "password"]
      },
      "LogoutResponse": {
        "title": "LogoutResponse",
        "additionalProperties": false,
        "type": "object",
        "properties": { "ok": { "type": "boolean", "enum": [true] } },
        "required": ["ok"]
      },
      "RecordContent": { "anyOf": [{ "type": "string" }, { "type": "null" }] },
      "Record": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "id": { "minLength": 1, "type": "string" },
          "title": { "type": "string" },
          "content": { "$ref": "#/components/schemas/RecordContent" },
          "createdAt": { "format": "date-time", "type": "string" },
          "updatedAt": { "format": "date-time", "type": "string" }
        },
        "required": ["id", "title", "content", "createdAt", "updatedAt"]
      },
      "RecordList": { "type": "array", "items": { "$ref": "#/components/schemas/Record" } },
      "RecordParams": {
        "additionalProperties": false,
        "type": "object",
        "properties": { "id": { "minLength": 1, "type": "string" } },
        "required": ["id"]
      },
      "CreateRecordRequest": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "title": { "minLength": 1, "type": "string" },
          "content": { "$ref": "#/components/schemas/RecordContent" }
        },
        "required": ["title"]
      },
      "UpdateRecordRequest": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "title": { "minLength": 1, "type": "string" },
          "content": { "$ref": "#/components/schemas/RecordContent" }
        }
      },
      "DeleteRecordResponse": {
        "additionalProperties": false,
        "type": "object",
        "properties": { "ok": { "type": "boolean", "enum": [true] } },
        "required": ["ok"]
      },
      "SandboxResponse": {
        "title": "SandboxResponse",
        "additionalProperties": false,
        "type": "object",
        "properties": { "message": { "type": "string" } },
        "required": ["message"]
      },
      "SandboxDelayQuery": {
        "title": "SandboxDelayQuery",
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "delayMs": {
            "minimum": 0,
            "maximum": 60000,
            "description": "Искусственная задержка в миллисекундах",
            "type": "integer"
          }
        }
      }
    }
