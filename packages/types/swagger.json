{
  "openapi": "3.1.0",
  "info": {
    "title": "Mnemos API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "getHealth",
        "tags": ["health"],
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/records": {
      "get": {
        "operationId": "getRecords",
        "tags": ["records"],
        "summary": "List records",
        "responses": {
          "200": {
            "description": "Records list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Record"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createRecord",
        "tags": ["records"],
        "summary": "Create record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateRecordBody"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created record",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Record"
                }
              }
            }
          }
        }
      }
    },
    "/api/records/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "put": {
        "operationId": "updateRecord",
        "tags": ["records"],
        "summary": "Update record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateRecordBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated record",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Record"
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "deleteRecord",
        "tags": ["records"],
        "summary": "Delete record",
        "responses": {
          "200": {
            "description": "Deletion result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteRecordResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "const": true,
            "type": "boolean"
          },
          "ts": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["ok", "ts"],
        "additionalProperties": false
      },
      "Record": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "title", "content", "createdAt", "updatedAt"],
        "additionalProperties": false
      },
      "CreateRecordBody": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "content": {
            "type": "string",
            "nullable": true
          }
        },
        "required": ["title"],
        "additionalProperties": false
      },
      "UpdateRecordBody": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "content": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DeleteRecordResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "const": true,
            "type": "boolean"
          }
        },
        "required": ["ok"],
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "health"
    },
    {
      "name": "records"
    }
  ]
}
