{
  "name": "mnemos",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "concurrently -n API,WEB -c blue,green \"pnpm -F @mnemos/api dev\" \"pnpm -F @mnemos/web dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prettier": "prettier",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.45.0",
    "prettier": "^3.4.2"
  },
  "prettier": "./prettier.config.mjs"
}
